

<h1 class="text-center">New Category</h1>
<%= render 'shared/errors', obj: @category %>

<div class="container">
<div class="row">
    <div class="col-sm-12">
        <%= form_for(@category, :html => { class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <label  class="col-sm-2 control-label">
                    <%= f.label :name%> 
                </label>
                <div class="col-xs-12 col-sm-8 col-md-6">
                    <%= f.text_field :name, :class=>"form-control", :placeholder=>"Enter Category" %>
                </div>    
            </div>
               
             <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: 'btn btn-primary'  %>
             </div>
        <% end %>
         <div class="col-sm-offset-4 col-sm-4 "> 
            <span class=""> [</span> 
            <%= link_to  "Cancel  eturn to Categories listing", categories_path %> ]
        </div>
   </div> 
</div>